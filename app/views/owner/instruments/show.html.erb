<div class='text-center'> <h1>Présentation de l'instrument.</h1> </div>
<h2><%= @instrument.description %></h2>
<%= cl_image_tag @instrument.photo, height: 200, width: 300, crop: :fill %>
<p>Catégorie : <%= @instrument.category %></p>
  <br>
  <% if !current_user.nil? %>
    <%= link_to  edit_owner_instrument_path(@instrument), class: 'btn btn-secondary' do %>
      <i class="fa fa-edit fa-lg"></i>
    <% end %>
    <%= link_to owner_instrument_path(@instrument), method: :delete, class: 'btn btn-secondary' do %>
      <i class="fa fa-trash fa-lg"></i>
    <% end %>
  <% end %>
  <%= link_to "Louer", instrument_path(@instrument), class: 'btn btn-secondary' %>
  <%= link_to "Retour", owner_instruments_path, class: 'btn btn-secondary'  %>

