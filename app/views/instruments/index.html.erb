<div class="container">
  <div class="row" >
    <% @instruments.each do |instrument| %>
      <div class="col-4">
        <div class="card-trip">
          <img src="https://images.unsplash.com/photo-1486092642310-0c4e84309adb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" />
            <div class="card-trip-infos">
              <div>
                <%= link_to instrument.description, instrument_path(instrument), class: 'btn btn-secondary' %>
                <p><%= instrument.category %></p>
              </div>
              <h2 class="card-trip-pricing"><%= instrument.unit_price %></h2>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
