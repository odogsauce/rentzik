 <div class='text-center'> <h1>Matériels de concert proposés </h1> </div>

<div class="container">
  <div class="row" >
    <% @instruments.each do |instrument| %>
      <div class="col-4">
        <div class="card-trip">
            <div class="card-trip-infos">
              <div>
                <%= link_to instrument.description, instrument_path(instrument), class: 'btn btn-warning' %>
                <p><%= instrument.category %></p>
              </div>
              <h2 class="card-trip-pricing"><%= instrument.unit_price %></h2>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

